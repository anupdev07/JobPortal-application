<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Jobseeker Dashboard</title>
  <style>
    /* Base styling */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body, html {
      height: 100%;
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #1a1a2e, #16213e);
      color: #e0e0e0;
      display: flex;
    }

    /* Sidebar */
    .sidebar {
      width: 250px;
      background: #111;
      padding: 2rem 1rem;
      display: flex;
      flex-direction: column;
      align-items: center;
      height: 100vh;
    }
    .sidebar h2 {
      color: #c9a6ff;
      margin-bottom: 2rem;
      font-size: 1.8rem;
      text-align: center;
    }
    .sidebar a {
      color: #eaeaf0;
      font-size: 1.1rem;
      margin: 1rem 0;
      text-decoration: none;
      transition: color 0.3s ease, background 0.3s ease;
      padding: 0.5rem;
      border-radius: 5px;
    }
    .sidebar a:hover {
      color: #fff;
      background: #7f59ff;
    }
    .logout {
      margin-top: auto;
      color: #fff;
      background-color: #e63946;
      padding: 0.5rem 1rem;
      font-size: 1rem;
      font-weight: bold;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
      transition: background 0.3s ease;
    }
    .logout:hover {
      background-color: #c52834;
    }

    /* Main content */
    .main-content {
      flex: 1;
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      overflow-y: auto;
    }
    .main-content h1 {
      font-size: 2.5rem;
      color: #c9a6ff;
    }

    /* Dashboard Sections */
    .section {
      background: rgba(33, 31, 47, 0.85);
      border-radius: 12px;
      padding: 1.5rem;
    }
    .section h2 {
      font-size: 1.5rem;
      color: #d1c3ff;
      margin-bottom: 1rem;
    }
    .section p {
      font-size: 1rem;
      color: #b2b6c5;
    }
    
    /* Job List */
    .job-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .job-item {
      background: #252a41;
      border-radius: 8px;
      padding: 1rem;
      color: #eaeaf0;
    }
    .job-item h3 {
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
    }
    .job-item button {
      padding: 0.5rem 1rem;
      font-size: 1rem;
      color: #fff;
      background: linear-gradient(135deg, #7f59ff, #a368d8);
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    .job-item button:hover {
      transform: scale(1.05);
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <div class="sidebar">
    <h2>Dashboard</h2>
    <a href="#job-listings">Job Listings</a>
    <a href="#applications">My Applications</a>
    <a href="/logout" class="logout">Logout</a>
  </div>

  <!-- Main Content -->
  <div class="main-content">
    
    <!-- Header -->
    <h1>Welcome to Your Dashboard</h1>

    <!-- Job Listings Section -->
    <div id="job-listings" class="section">
      <h2>Job Listings</h2>
      <div class="job-list">
        <% jobs.forEach(job => { %>
          <div class="job-item">
            <h3><%= job.jobTitle %></h3>
            <p><strong>Company:</strong> <%= job.Company.companyName %></p>
            <p><strong>Location:</strong> <%= job.location || 'N/A' %></p>
            <p><strong>Type:</strong> <%= job.jobType || 'N/A' %></p>
            <p><strong>Salary:</strong> $<%= job.salary || 'N/A' %></p>
            <p><strong>Description:</strong> <%= job.jobDescription || 'N/A' %></p>
            <p><strong>Posting Date:</strong> <%= job.postingDate ? job.postingDate.toDateString() : 'N/A' %></p>
            <p><strong>Expiry Date:</strong> <%= job.expiryDate ? job.expiryDate.toDateString() : 'N/A' %></p>
            <form action="/apply/<%= job.id %>" method="POST">
              <br>
              <button type="submit">Apply</button>
            </form>
          </div>
        <% }) %>
      </div>
    </div>

    <!-- Applications Section -->
    <div id="applications" class="section">
      <h2>My Applications</h2>
      <p>Track the status of jobs you've applied for and stay updated on your application progress.</p>
      <!-- Example of application tracking can go here -->
    </div>
  </div>

</body>
</html>
