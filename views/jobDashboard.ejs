<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Jobs for <%= company.companyName %></title>
    <style>
        /* General styling */
        * {
            scroll-behavior: smooth;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }
        body, html {
            height: 100%;
            background: linear-gradient(135deg, #1a1a2e, #16213e);
            color: #e0e0e0;
            overflow-x: hidden;
        }

        /* Flex container styling */
        .container {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar styling */
        .sidebar {
            background: #111;
            width: 250px;
            padding: 2rem 1rem;
            position: fixed;
            height: 100vh;
            color: #eaeaf0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .sidebar h2 {
            color: #c9a6ff;
            font-weight: bold;
            margin-bottom: 2rem;
            font-size: 1.8rem;
        }
        .sidebar a {
            color: #eaeaf0;
            display: block;
            padding: 0.75rem 1rem;
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
            transition: color 0.3s ease;
            text-decoration: none;
            text-align: center;
        }
        .sidebar a:hover {
            color: #7f59ff;
        }

        /* Main content styling */
        .content {
            margin-left: 250px;
            padding: 2rem;
            flex-grow: 1;
        }

        /* Header and section titles */
        h1 {
            font-size: 2.5rem;
            color: #c9a6ff;
        }
        h2 {
            color: #d1c3ff;
            margin-bottom: 1rem;
        }

        /* Form styling */
        form {
            display: flex;
            flex-direction: column;
            background: rgba(33, 31, 47, 0);
            padding: 2rem;
            border-radius: 12px;
            
        }
        label {
            margin: 1rem 0 0.5rem;
            color: #d1c3ff;
        }
        input, textarea, select {
            padding: 0.8rem;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            color: #e0e0e0;
            background: #252a41;
            margin-bottom: 1rem;
        }
        button {
            padding: 0.8rem;
            font-size: 1rem;
            color: #fff;
            background: linear-gradient(135deg, #7f59ff, #a368d8);
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }
        button:hover {
            transform: scale(1.05);
        }

        /* Job cards styling */
        .job-card {
            background: #131625;
            padding: 1.5rem;
            margin: 1rem 0;
            border-radius: 8px;
            color: #eaeaf0;
           
        }
        .job-card h3 {
            color: #c9a6ff;
            margin-bottom: 0.5rem;
        }
        .job-card p {
            margin: 0.5rem 0;
            color: #b2b6c5;
        }

        /* Job Listings and Job Applications sections */
        .section {
            padding: 2rem;
            margin: 1rem 0;
            border-radius: 12px;
            background: rgba(19, 17, 29, 0.85);
            
        }

        /* Responsiveness */
        @media (max-width: 768px) {
            .job-card {
                width: 100%;
            }
            .sidebar {
                width: 200px;
            }
            .content {
                margin-left: 200px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar Navigation -->
        <div class="sidebar">
            <h2>Job Dashboard</h2>
            <a href="#createJobForm">Create New Job</a>
            <a href="#jobListings">View Job Listings</a>
            <a href="#jobApplications">View/Manage Applications</a>
        </div>

        <!-- Main Content Area -->
        <div class="content">
            <h1>Manage Jobs for <%= company.companyName %></h1>

            <!-- Create Job Form Section -->
            <section id="createJobForm" class="section">
                <h2>Create New Job</h2>
                <form action="/company/<%= company.companyId %>/jobs/create" method="POST">
                    <label for="jobTitle">Job Title:</label>
                    <input type="text" id="jobTitle" name="jobTitle" required>

                    <label for="jobDescription">Job Description:</label>
                    <textarea id="jobDescription" name="jobDescription" required></textarea>

                    <label for="salary">Salary:</label>
                    <input type="number" id="salary" name="salary" required>

                    <label for="location">Location:</label>
                    <input type="text" id="location" name="location" required>

                    <label for="jobType">Job Type:</label>
                    <select id="jobType" name="jobType" required>
                        <option value="Full-time">Full-time</option>
                        <option value="Part-time">Part-time</option>
                    </select>

                    <label for="postingDate">Posting Date:</label>
                    <input type="date" id="postingDate" name="postingDate" required>

                    <label for="expiryDate">Expiry Date:</label>
                    <input type="date" id="expiryDate" name="expiryDate" required>

                    <button type="submit">Create Job</button>
                </form>
            </section>

            <!-- Job Listings Section -->
            <section id="jobListings" class="section">
                <h2>Your Job Listings</h2>
                <% if (jobs && jobs.length > 0) { %>
                    <% jobs.forEach(job => { %>
                        <div class="job-card">
                            <h3><%= job.jobTitle %></h3>
                            <p><strong>Description:</strong> <%= job.jobDescription %></p>
                            <p><strong>Salary:</strong> <%= job.salary %></p>
                            <p><strong>Location:</strong> <%= job.location %></p>
                            <p><strong>Type:</strong> <%= job.jobType %></p>
                            <p><strong>Posting Date:</strong> <%= job.postingDate.toISOString().split('T')[0] %></p>
                            <p><strong>Expiry Date:</strong> <%= job.expiryDate.toISOString().split('T')[0] %></p>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No jobs found for this company.</p>
                <% } %>
            </section>

            <!-- Job Applications Section (Placeholder) -->
            <section id="jobApplications" class="section">
                <h2>View/Manage Job Applications</h2>
                <p>In Progress...</p>
            </section>
        </div>
    </div>
</body>
</html>
